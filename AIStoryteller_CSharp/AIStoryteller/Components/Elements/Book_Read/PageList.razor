<div class="container row gx-0">
    <div class="overflow-auto page-list-row-height page-list-row-height">
        @for (int index = 1; index <= 275; index++)
        {
            <div class="card">
                <div class="p-4 card-body">
                    <div class="row">
                        <div class="col-lg-10 col-md-10 col-sm-10">
                            <div class="align-items-center row">
